@model Jackson_Brynne_HW3.Models.SearchViewModel

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>Detailed Book Search</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchName" class="control-label"></label>
                <input asp-for="SearchName" class="form-control" />
                <span asp-validation-for="SearchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionName" class="control-label"></label>
                <input asp-for="DescriptionName" class="form-control" />
                <span asp-validation-for="DescriptionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedFormat" class="control-label"></label>
                <select asp-for=" SelectedFormat" asp-items="Html.GetEnumSelectList<Format>()" class="form-control">
                    <option selected="selected" value="">All Formats</option>
                </select>
                <span asp-validation-for="SelectedFormat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedGenreID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedGenreID, (SelectList)ViewBag.AllGenres, new { @class = "form-control" })
                <span asp-validation-for="SelectedGenreID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SearchPrice" class="control-label"></label>
                <input asp-for="SearchPrice" class="form-control" />
                <span asp-validation-for="SearchPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Great_Less_Than" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="Great_Less_Than" value="@Price.Less" checked="checked" />&nbsp; Less Than<br />
                <input type="radio" class="radio" asp-for="Great_Less_Than" value="@Price.Greater" />&nbsp; Greater Than<br />
            </div>
            <div class="form-group">
                <label asp-for="SelectedDate" class="control-label"></label>
                <input asp-for="SelectedDate" class="form-control" />
                <span asp-validation-for="SelectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
